{
  "compilerOptions": {
    "lib": ["ES2022"],
    "target": "ES2015",
    "module": "ES2015",
    "moduleResolution": "Bundler",
    "strict": true,
    "stripInternal": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "isolatedDeclarations": true,
    "verbatimModuleSyntax": true,
    "erasableSyntaxOnly": true,
    "noUncheckedIndexedAccess": true,
    "composite": true,
    "skipLibCheck": true
  },
  "include": ["."],
  "exclude": ["dist"]
}
